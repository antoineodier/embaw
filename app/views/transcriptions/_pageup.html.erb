<%= link_to "#", :class => "forme-texte", :id => "page_up" do %>
   <i class="fa fa-arrow-circle-o-right size-fleche"></i>
   <%= t(".messages", default: "Page suivante") %>
<% end %>

<%= content_for(:after_js) do %>
  <script type="text/javascript">
    var array_pages = $.ajax({
      type: "GET",
      dataType: "json",
      url: "/transcriptions/" + "<%= transcription_id %>"
    });
    var page_number = 0;
    array_pages.done(
      $("#page_up").on("click", function(){
        page_number += 1;
        $("#page-transcription").empty();
        $("#page-transcription").append(array_pages.responseJSON[page_number]).slideDown();
        $(".viewer").empty();
        $(".viewer").append("<img src='../assets/maillefer/maillefer-1v.jpg' class='facsimile' width='85%' height='auto'>");
        })
      )
    $(window).load(function () {
var $section = $('section');
          $section.panzoom('resetDimensions');
          $section.find('.viewer').panzoom({
            $zoomIn: $section.find(".zoom-in"),
            $zoomOut: $section.find(".zoom-out"),
            $zoomRange: $section.find(".zoom-range"),
            $reset: $section.find(".reset")
          });
    });
  </script>
<% end %>

