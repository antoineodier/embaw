<div>
  <div class="form-registration">
    <div>
      <h4 class="form-title">Please register to enter</h4>
    <div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    </div>
    <!-- <div id="error-notification">
      <%= f.error_notification %>
    </div> -->
    <!-- utiliser la console pour controler le html généré = utilise la class "alert..." -->
    <div>
      <div class="text-center" id="box-email">
        <%= f.input :email, autofocus: true, label: "Email address" %>
      </div>
    </div>
    <div class="text-center" id="box-password">
      <%= f.input :password, label: "Password" %>
    </div>
    <div id="password-characters">
      <p>8 characters</p>
    </div>
    <div id="box-btn-register">
      <%= f.button :submit, "Register", class: "btn btn-primary" %>
    </div>
    <div>
      <% end %>
    </div>
    <div class="text-center" id="shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<div>
  <%= image_tag("homepage/neudoerffer_bnf.jpg", class: "img-responsive min-size-img") %>
</div
<div class="bg-white">
  <h4 class="interligne">
    <i>Reading and Researching Egodocuments Through a Digital and <strong>European</strong> Approach</i>
  </h4>
</div>