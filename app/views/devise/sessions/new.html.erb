<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2><%= "Connection" %></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email, required: false, autofocus: true, label: "Adresse email" %>
          <%= f.input :password, required: false, label: "Mot de passe" %>
          <%= f.input :remember_me, label: "MÃ©moriser mes identifiants", as: :boolean if devise_mapping.rememberable? %>
          <%= f.button :submit, "Connection", class: "btn btn-primary" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>